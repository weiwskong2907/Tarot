@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm border-success">
        <div class="card-body py-5">
            <i class="fas fa-check-circle text-success fa-5x mb-4"></i>
            <h1 class="display-4 text-success">Booking Confirmed!</h1>
            <p class="lead mt-3">Your appointment has been successfully scheduled.</p>
            <p>We have sent a confirmation email with all the details.</p>
            
            <div class="mt-5">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">Back to Home</a>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary btn-lg">View My Dashboard</a>
            </div>
        </div>
    </div>
</div>
