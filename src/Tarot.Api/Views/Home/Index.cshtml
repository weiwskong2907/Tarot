@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">@Model.Title</h1>
    <p class="lead">Discover your destiny with our professional Tarot readings.</p>
    <a asp-controller="Services" asp-action="Index" class="btn btn-primary btn-lg mt-3">Book a Reading</a>
</div>

<div class="row mt-5">
    <div class="col-12 text-center mb-4">
        <h2>Featured Services</h2>
    </div>
    @foreach (var service in Model.FeaturedServices)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100 box-shadow">
                <div class="card-body">
                    <h3 class="card-title">@service.Name</h3>
                    <p class="card-text">@service.Description</p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span class="badge bg-secondary">@service.Duration</span>
                        <span class="h4 mb-0 text-primary">$@service.Price</span>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-primary w-100">Book Now</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-5 py-5 bg-light rounded">
    <div class="col-12 text-center">
        <h2>Customer Reviews</h2>
        <div class="row mt-4 justify-content-center">
            <div class="col-md-8">
                <blockquote class="blockquote">
                    <p class="mb-0">"The reading was incredibly accurate and helpful. Highly recommended!"</p>
                    <footer class="blockquote-footer mt-2">Jane Doe</footer>
                </blockquote>
            </div>
        </div>
    </div>
</div>
